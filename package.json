{
  "name": "sparql-query-ui",
  "version": "0.1.0",
  "description": "Modern SPARQL query interface built with Svelte 5",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npm run type-check && vite build",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:unit": "vitest run --dir tests/unit",
    "test:integration": "vitest run --dir tests/integration",
    "test:e2e": "playwright test",
    "test:coverage": "vitest run --coverage",
    "bench": "vitest bench",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write src tests",
    "format:check": "prettier --check src tests",
    "check": "npm run type-check && npm run lint && npm run format:check && npm run test:unit && npm run build-storybook",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build --quiet",
    "test:storybook": "test-storybook",
    "chromatic": "chromatic --exit-zero-on-changes"
  },
  "keywords": [
    "sparql",
    "rdf",
    "semantic-web",
    "query",
    "svelte",
    "carbon",
    "yasgui",
    "typescript"
  ],
  "author": "Arne Bernhardt",
  "license": "Apache-2.0",
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.1",
    "@eslint/js": "^9.15.0",
    "@playwright/test": "^1.56.1",
    "@storybook/addon-a11y": "^9.1.15",
    "@storybook/addon-docs": "^9.1.15",
    "@storybook/addon-svelte-csf": "^5.0.10",
    "@storybook/addon-vitest": "^9.1.15",
    "@storybook/sveltekit": "^9.1.15",
    "@storybook/test-runner": "^0.23.0",
    "@sveltejs/package": "^2.5.4",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/svelte": "^5.2.8",
    "@tsconfig/svelte": "^5.0.5",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "carbon-preprocess-svelte": "^0.11.11",
    "eslint": "^9.38.0",
    "eslint-plugin-storybook": "^9.1.15",
    "eslint-plugin-svelte": "^3.12.5",
    "globals": "^15.12.0",
    "jsdom": "^27.0.1",
    "playwright": "^1.56.1",
    "prettier": "^3.6.2",
    "prettier-plugin-svelte": "^3.4.0",
    "storybook": "^9.1.15",
    "svelte": "^5.41.4",
    "svelte-eslint-parser": "^1.4.0",
    "typescript": "^5.9.3",
    "vite": "^7.1.12",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@codemirror/autocomplete": "^6.19.1",
    "@codemirror/commands": "^6.10.0",
    "@codemirror/lang-json": "^6.0.2",
    "@codemirror/lang-xml": "^6.1.0",
    "@codemirror/language": "^6.11.3",
    "@codemirror/search": "^6.5.11",
    "@codemirror/state": "^6.5.2",
    "@codemirror/theme-one-dark": "^6.1.3",
    "@codemirror/view": "^6.38.6",
    "carbon-components-svelte": "^0.90.0",
    "carbon-icons-svelte": "^13.6.0",
    "codemirror": "^6.0.2",
    "wx-svelte-grid": "^2.3.0"
  }
}
